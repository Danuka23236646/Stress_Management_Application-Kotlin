            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/aromaText3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/aromaText5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_5_jasmine_neffects_relieves_tension_promotes_relaxation_and_helps_with_sleep_nideal_for_evening_relaxation_and_romance_nused_in_essential_oils_and_room_fresheners_n_n"
