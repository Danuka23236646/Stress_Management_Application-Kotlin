            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/aromaText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/aromaText3"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/_3_sandalwood_neffects_helps_in_deep_meditation_reduces_restlessness_and_enhances_focus_nideal_for_yoga_prayer_and_deep_relaxation_noften_used_in_incense_sticks_and_essential_oils_n_n"
