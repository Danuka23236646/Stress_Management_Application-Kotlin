            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/aromaText"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/_1_lavender_neffects_reduces_stress_anxiety_and_promotes_deep_sleep_nideal_for_meditation_bedtime_and_relaxation_nused_in_diffusers_bath_oils_pillow_sprays_n_n"
