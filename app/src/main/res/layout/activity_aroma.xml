            android:id="@+id/aromaText6"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/_6_ylang_ylang_neffects_lowers_blood_pressure_reduces_anxiety_and_enhances_mood_nideal_for_deep_relaxation_and_meditation_noften_blended_with_other_oils_for_a_calming_effect"
