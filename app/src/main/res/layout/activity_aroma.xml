            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/aromaText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/aromaText4"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/_4_rose_neffects_uplifts_mood_reduces_depression_and_creates_a_calming_effect_nideal_for_stress_relief_self_care_and_emotional_healing_nused_in_perfumes_diffusers_and_bath_products_n_n"
